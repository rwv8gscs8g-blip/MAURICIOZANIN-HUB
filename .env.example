# LinkedIn Integration
# Obtenha essas credenciais em: https://developer.linkedin.com/
LINKEDIN_CLIENT_ID=seu_client_id_aqui
LINKEDIN_CLIENT_SECRET=seu_client_secret_aqui
LINKEDIN_ACCESS_TOKEN=seu_access_token_aqui
LINKEDIN_ORG_ID=seu_organization_id_aqui
LINKEDIN_WEBHOOK_SECRET=seu_webhook_secret_aqui

# Database (use um branch por ambiente no Neon)
# Dev: .env.local com URL do branch "dev"
# Preview: Vercel env "Preview" com URL do branch "preview"
# Production: Vercel env "Production" com URL do branch "production"
DATABASE_URL="postgresql://user:password@host:5432/database"

# Next.js
NEXT_PUBLIC_SITE_URL=https://mauriciozanin.com.br

# Auth
AUTH_SECRET="gere_uma_chave_segura"
APP_BASE_URL="http://localhost:3000"

# Email (Resend)
RESEND_API_KEY="sua_api_key"
MAIL_FROM="no-reply@mauriciozanin.com"

# Admin seed (script)
ADMIN_EMAIL="admin@mauriciozanin.com"
ADMIN_PASSWORD="senha_forte"
ADMIN_NAME="Administrador"

# Cloudflare R2 Storage
R2_ACCOUNT_ID=seu_account_id_aqui
R2_ACCESS_KEY_ID=seu_access_key_id_aqui
R2_SECRET_ACCESS_KEY=seu_secret_access_key_aqui
R2_BUCKET_NAME=seu_bucket_name_aqui
# Opcional: URL pública amigável, ex: https://media.mauriciozanin.com
R2_PUBLIC_URL=

# Automação / Deploy
GITHUB_TOKEN=seu_github_token_aqui
VERCEL_TOKEN=seu_vercel_token_aqui
# Neon API key (só em .env.local; usado por scripts/neon-create-branches.js para criar branches)
NEON_API_KEY=sua_neon_api_key_aqui
# Opcional: se usar organização no Neon, defina (Neon Console → org → Settings → Organization ID).
# NEON_ORG_ID=org-xxxx
# Opcional: fixar projeto (ID no Neon Console → Settings). Senão o script usa o primeiro projeto.
# NEON_PROJECT_ID=seu_project_id

